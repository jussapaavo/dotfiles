theme = argonaut
font-family = CommitMono Nerd Font
font-feature = ss03
font-feature = ss04
font-feature = ss05
adjust-cell-height = 10%

cursor-color = #ffffff
cursor-style = bar
adjust-cursor-thickness = 2

