window-save-state = never

# MacOS like movements
keybind = cmd+backspace=esc:d0xi
keybind = cmd+left=esc:^i
keybind = cmd+right=esc:$a
keybind = alt+left=esc:bi
keybind = alt+right=esc:ea

keybind = cmd+enter=new_split:auto
keybind = cmd+alt+left=previous_tab
keybind = cmd+alt+right=next_tab
