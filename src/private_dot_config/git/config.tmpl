[init]
  defaultBranch = main

[color]
  ui = true

[color "status"]
  added = green
  changed = yellow
  untracked = red

[core]
	excludesfile = ~/.config/git/ignore

[rerere]
  enabled = true

[commit]
  verbose = true

[push]
  default = current

[pull]
	rebase = true

[user]
	name = {{ .name }}
	email = {{ .email }}

{{ if .is_codespace -}}
# For Github Codespaces
[includeIf "gitdir:**/workspaces/*/"]
	path = ~/.config/git/dagmar
{{ end -}}

{{ if .is_personal -}}
[includeIf "gitdir:**/Dagmar/*/"]
	path = ~/.config/git/dagmar
{{ end -}}