# Taps
tap 'homebrew/cask'
tap 'homebrew/cask-fonts'
tap 'homebrew/cask-versions'
tap 'homebrew/bundle'

# Binaries
brew 'ffmpeg'         # Better audio and video handling
brew 'httpie'
brew 'mas'            # Mac App Store manager
brew 'trash'          # Manage the Trash bin

# Development
brew 'awscli'         # Official AWS command-line interface
cask 'flake8'         # Python linting
brew 'gh'             # GitHub CLI
brew 'hub'            # GitHub CLI extensions
brew 'hugo'           # Build static websites from markdown files
cask 'miniconda'      # Conda package manager
brew 'terragrunt'
cask 'google-cloud-sdk'

# Flex
brew 'neofetch'       # Display information about your system in terminal
brew 'cmatrix'        # Terminal screensaver
brew 'lolcat'         # Make text inputs colorful

# Apps
cask '1password'
cask 'avast-security'
cask 'bettermouse'
cask 'brave-browser'
cask 'discord'
cask 'dropbox'
cask 'firefox'
cask 'flux'
cask 'google-chrome'
cask 'gpg-suite'
cask 'imageoptim'
cask 'iina'           # Open-Source Video Player
cask 'monitorcontrol'
cask 'numi'
cask 'obsidian'
cask 'onyx'
cask 'slack'
cask 'zoom'

# Finder Quicklook
cask 'apparency'        # Show better app info
cask 'qlmarkdown'       # Preview markdown files
cask 'qlstephen'        # Preview text files without extension
cask 'quicklook-json'   # Preview json files
cask 'syntax-highlight', args: { no_quarantine: true }

# Fonts
cask 'font-lato'
cask 'font-open-sans'
cask 'font-roboto'
cask 'font-source-code-pro-for-powerline'
cask 'font-source-code-pro'
cask 'font-source-sans-pro'
cask 'font-source-serif-pro'
cask 'font-fira-code-nerd-font'
cask 'font-fira-mono-nerd-font'
cask 'font-jetbrains-mono-nerd-font'

